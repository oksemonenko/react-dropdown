@import "../../theme/base";

.dropdown-list
  display none
  cursor pointer
  position absolute
  top 100%
  left 1px
  flex-direction column
  min-width: calc(100% - 2px);
  max-height 16rem
  padding 0
  margin 0 -1px
  overflow-x hidden
  overflow-y scroll
  font-size $font-size
  text-align left
  background $bg-color
  border 1px solid $weak-color
  border-top-color transparent
  border-radius 0 0 0.3rem 0.3rem
  outline none
  z-index 3

  &--visible
    display flex!important

    &::-webkit-scrollbar {
      display: none;
    }

  &--upward
    top auto
    bottom 100%
    border-top-color $weak-color
    border-bottom-color transparent
    border-radius 0.3rem 0.3rem 0 0