.dropdown-list
  display none
  cursor pointer
  flex-direction column
  min-width 100%
  max-height 16rem
  padding 0
  margin 0 -1px
  overflow-x hidden
  overflow-y scroll
  font-size 1em
  text-align left
  background #fff
  border 1px solid gray
  border-radius 0 0 0.3rem 0.3rem
  outline none

  &--visible
    display flex!important

    &::-webkit-scrollbar {
      display: none;
    }