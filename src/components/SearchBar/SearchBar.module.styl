.search-bar
  position relative
  display flex
  min-height 2.7em
  color rgba(0,0,0,0.8)
  font-size 1em
  border 1px solid gray
  border-radius 0.3rem
  border-bottom-left-radius 0
  border-bottom-right-radius 0

  &__input
    width 100%
    padding 0.7em 2.1em 0.7em 1em
    line-height 1.2em
    border none
    border-radius 0.3rem
    outline none
    box-shadow none