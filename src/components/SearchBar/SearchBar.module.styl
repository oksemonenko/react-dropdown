.search-bar
  position relative
  display flex
  min-height 2.7em
  color rgba(0,0,0,0.8)
  font-size 1em
  border 1px solid gray
  border-radius 0.3rem

  &__input
    width 100%
    padding 0.7em 2.1em 0.7em 1em
    line-height 1.2em
    border none
    border-radius 0.3rem
    outline none
    box-shadow none
    transition all .2s ease

  &__input-wrapper
    position relative
    display flex
    width 100%

  &__placeholder
    position absolute;
    top 50%;
    left 10px;
    display block;
    padding 0 10px;
    color rgba(0,0,0,0.8)
    white-space nowrap;
    transition all, 0.2s;
    transform translateY(-50%)
    pointer-events none;
    user-select none;

    &--top
      top -9px;
      background-color #fff
      color rgba(0,0,0,0.8)
      transform translateY(0)

    &--none
      display none

  &__icon
    cursor pointer;
    position absolute
    width auto;
    height auto;
    top 0.8em
    right 1em
    margin -0.8em
    padding 0.8em
    line-height 1.2em
    opacity 0.8

    &:before
      content ''
      display block
      width 0
      height 0
      margin-top 0.4em
      border-left 5px solid transparent
      border-right 5px solid transparent
      border-top 5px solid rgba(0,0,0,0.8)

  &--active
    border-bottom-left-radius 0
    border-bottom-right-radius 0

  &--upward
    border-bottom-left-radius 0.3rem
    border-bottom-right-radius 0.3rem
    border-top-left-radius 0
    border-top-right-radius 0

    .search-bar__icon
      margin -0.5em
      transform rotate(180deg)